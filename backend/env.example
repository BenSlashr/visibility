# 🔑 Clés API IA (OBLIGATOIRE)
# Obtenez vos clés sur les plateformes respectives
OPENAI_API_KEY=sk-...
GOOGLE_API_KEY=AIza...
ANTHROPIC_API_KEY=sk-ant-...
MISTRAL_API_KEY=...

# 🗄️ Base de Données
DATABASE_URL=sqlite:///./data/visibility.db

# 🚀 Configuration Serveur
DEBUG=true
HOST=0.0.0.0
PORT=8021

# 🌐 CORS Frontend (JSON format)
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# ⚙️ Configuration IA
DEFAULT_MAX_TOKENS=4000
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1

# 📊 Limites Application
MAX_CONCURRENT_ANALYSES=3
ANALYSIS_TIMEOUT_SECONDS=30

# 🔍 Fonctionnalités
AUTO_DETECT_RANKING=true
ENABLE_COST_TRACKING=true

# 📝 Logs
LOG_LEVEL=INFO
LOG_FORMAT=detailed 